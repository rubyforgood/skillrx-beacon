<nav class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to "SkillRx Beacon", root_path, class: "text-xl font-bold text-indigo-600" %>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to "Browse", topics_path,
              class: "#{request.path.start_with?('/topics') && !request.path.include?('favorites') ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          <%= link_to "Search", search_path,
              class: "#{request.path.start_with?('/search') ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          <% if user_signed_in? %>
            <%= link_to "Local Files", local_files_path,
                class: "#{request.path.start_with?('/local_files') ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <%= link_to "Favorites", favorites_topics_path,
                class: "#{request.path.include?('favorites') ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          <% end %>
        </div>
      </div>

      <div class="flex items-center">
        <% if user_signed_in? %>
          <span class="text-gray-700 text-sm mr-4">
            Welcome, <%= current_user.first_name %>
          </span>
          <%= button_to "Sign out", logout_path, method: :delete,
              class: "text-gray-500 hover:text-gray-700 text-sm font-medium" %>
        <% else %>
          <%= link_to "Sign in", login_path, class: "text-gray-500 hover:text-gray-700 text-sm font-medium mr-4" %>
          <%= link_to "Sign up", signup_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
