<div class="bg-white border rounded-lg p-4 hover:shadow-md transition-shadow">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <div class="flex items-center text-xs text-gray-500 mb-2">
        <span class="bg-indigo-100 text-indigo-800 px-2 py-0.5 rounded font-medium">
          <%= topic.content_provider.name %>
        </span>
        <span class="mx-2">|</span>
        <span><%= topic.year %> - <%= topic.month %></span>
      </div>

      <%= link_to topic_path(topic), class: "block group" do %>
        <h3 class="font-semibold text-gray-900 group-hover:text-indigo-600 mb-2">
          <%= topic.title %>
        </h3>
      <% end %>

      <% if topic.authors.any? %>
        <p class="text-sm text-gray-600 mb-2">
          <%= topic.authors.map(&:name).join(", ") %>
        </p>
      <% end %>

      <div class="flex items-center text-xs text-gray-500 space-x-4">
        <% if topic.topic_files.any? %>
          <span class="flex items-center">
            <% mp3_count = topic.topic_files.count { |f| f.file_type == "mp3" } %>
            <% pdf_count = topic.topic_files.count { |f| f.file_type == "pdf" } %>
            <% if mp3_count > 0 %>
              <svg class="w-4 h-4 text-green-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
              </svg>
              <%= mp3_count %> audio
            <% end %>
            <% if pdf_count > 0 %>
              <svg class="w-4 h-4 text-red-500 ml-2 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              <%= pdf_count %> PDF
            <% end %>
          </span>
        <% end %>

        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <%= topic.view_count %>
        </span>
      </div>
    </div>

    <% if defined?(show_favorite) && show_favorite && user_signed_in? %>
      <div id="favorite_button_<%= topic.id %>">
        <%= render "topics/favorite_button", topic: topic, is_favorite: current_user.favorites.exists?(topic: topic) %>
      </div>
    <% end %>
  </div>
</div>
